<h3>{{ _('StackStorm Webhook Configuration') }}</h3>

<form class="form-horizontal">

    <div class="control-group" title="{{ _('Your StackStorm Webhook URL.') }}">
        <label class="control-label">{{ _('Webhook URL') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.stackstorm.webhook_url">
        </div>
    </div>

    <div class="control-group" title="{{ _('Your StackStorm API Key.') }}">
        <label class="control-label">{{ _('API Key') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.stackstorm.api_key">
        </div>
    </div>
</form>
